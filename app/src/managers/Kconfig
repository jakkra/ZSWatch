menu "Managers"
    menu "Power Manager"
        module = ZSW_PWR_MANAGER
        module-str = ZSW_PWR_MANAGER
        source "subsys/logging/Kconfig.template.log_config"
    endmenu

    menu "XIP Manager"
        config ZSW_XIP
            bool
            prompt "Enable XIP"
            select HAVE_CUSTOM_LINKER_SCRIPT
            select CODE_DATA_RELOCATION
            select BUILD_NO_GAP_FILL
            select NORDIC_QSPI_NOR_XIP
            default n

        module = ZSW_XIP_MANAGER
        module-str = ZSW_XIP_MANAGER
        source "subsys/logging/Kconfig.template.log_config"
    endmenu

    menu "Mic Manager"
        config ZSW_MIC
            bool
            prompt "Enable Mic functionality"
                select AUDIO
                select AUDIO_DMIC
                default n

        config ZSW_MIC_SEND_READING_OVER_RTT
            depends on USE_SEGGER_RTT
            bool
            prompt "Log sensor fusion reading to RTT"
            default y
            help
                Python script can be used to read, analyze the RTT channel and plot the sensor fusion reading.

        config ZSW_MIC_LOG_RTT_TRANSFER_CHANNEL
            depends on ZSW_MIC_SEND_READING_OVER_RTT
            int
            prompt "The RTT channel to use for transfer of sensor fusion reading"
            default 2

        config ZSW_MIC_LOG_RTT_TBUFFER_SIZE
            depends on ZSW_MIC_SEND_READING_OVER_RTT
            int
            prompt "Buffer size for the RTT transfer of microphone reading"
            default 512

        module = ZSW_MIC_MANAGER
        module-str = ZSW_MIC_MANAGER
        source "subsys/logging/Kconfig.template.log_config"
    endmenu
endmenu
